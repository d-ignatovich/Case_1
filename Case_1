import turtle
turtle.pensize(1)
turtle.speed(100)
def square(x, y, a):
    '''
    Function, drawing square.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: side length of a square
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.color("white", "#ff7d00")
    turtle.down()
    turtle.begin_fill()
    for i in range(4):
        turtle.forward(a)
        turtle.left(90)
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

def triangle(x, y, a, c):
    '''
    Function, drawing triangle.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: the size of the cathetus
    :param —Å: the fill color of the triangle
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.pencolor("white")
    turtle.fillcolor(c)
    turtle.down()
    turtle.begin_fill()
    turtle.forward(a)
    turtle.left(90)
    turtle.forward(a)
    turtle.left(135)
    turtle.forward((2*a*a)**(0.5))
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

def parallelogram(x, y, a):
    '''
    Function, drawing parallelogram.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: side length of a parallelogram
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.color("white", "#8fcd1e")
    turtle.down()
    turtle.begin_fill()
    for i in range(2):
        turtle.forward(a)
        turtle.left(135)
        turtle.forward((2*a*a)**(0.5))
        turtle.left(45)
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

#figure_1 upper left corner
square(-300, 200, 40)
parallelogram(-315, 240, 40)
triangle(-370, 150, 70, '#f72a49')
turtle.left(180)
triangle(-300, 150, 70, '#fede0c')
turtle.left(45)
