import turtle
turtle.pensize(1)
turtle.speed(100)
def square(x, y, a):
    '''
    Function, drawing square.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: side length of a square
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.color("white", "#ff7d00")
    turtle.down()
    turtle.begin_fill()
    for i in range(4):
        turtle.forward(a)
        turtle.left(90)
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

def triangle(x, y, a, c):
    '''
    Function, drawing triangle.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: the size of the cathetus
    :param —Å: the fill color of the triangle
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.pencolor("white")
    turtle.fillcolor(c)
    turtle.down()
    turtle.begin_fill()
    turtle.forward(a)
    turtle.left(90)
    turtle.forward(a)
    turtle.left(135)
    turtle.forward((2*a*a)**(0.5))
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

def parallelogram(x, y, a):
    '''
    Function, drawing parallelogram.
    :param x: lower left corner coordinate x
    :param y: lower left corner coordinate y
    :param a: side length of a parallelogram
    :return: None
    '''
    turtle.up()
    turtle.setposition(x, y)
    turtle.color("white", "#8fcd1e")
    turtle.down()
    turtle.begin_fill()
    for i in range(2):
        turtle.forward(a)
        turtle.left(135)
        turtle.forward((2*a*a)**(0.5))
        turtle.left(45)
    turtle.end_fill()
    turtle.setheading(0)
    turtle.up()

#figure_1 upper left corner
square(-300, 200, 40)
parallelogram(-315, 240, 40)
triangle(-370, 150, 70, '#f72a49')
turtle.left(180)
triangle(-300, 150, 70, '#fede0c')
turtle.left(45)
triangle(-300, 120, 40, '#ef66e9')
triangle(-370, 80, 50, '#4ebbe9')
turtle.right(90)
triangle(-320, 120, 40, '#a34fe3')

#figure_2 upper central
triangle(-100, 150, 40, '#a34fe3')
turtle.left(180)
triangle(-20, 190, 40, '#ef66e9')
parallelogram(-60, 190, 40)
turtle.right(45)
square(-20, 190, 40)
triangle(-32, 120, 70, '#fede0c')
turtle.left(90)
triangle(38, 190, 70, '#f72647')
turtle.left(45)
triangle(38, 160, 50, '#4ebbe9')

#figure_3 upper right corner
turtle.left(135)
parallelogram(230, 180, 40)
turtle.left(90)
triangle(270, 140, 70, '#f72647')
turtle.left(135)
triangle(270, 210, 50, '#4ebbe9')
turtle.left(180)
triangle(340, 180, 70, '#fede0c')
square(300, 180, 40)
turtle.left(135)
triangle(355, 220, 40, '#ef66e9')
turtle.right(135)
triangle(328, 168, 40, '#a34fe3')

turtle.done()
